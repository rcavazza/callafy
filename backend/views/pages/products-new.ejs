                            <div class="form-group">
                                <label class="form-label" for="defaultWeight">Peso (kg)</label>
                                <input
                                    type="number"
                                    class="form-input"
                                    id="defaultWeight"
                                    name="default_weight"
                                    step="0.01"
                                    min="0"
                                    placeholder="0.00"
